<%= form_with model: peep do |form| %>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
        <%= peep.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>